{% extends "layouts/base.twig" %}
{% block content %}
<section class="es-search fill-white xs-pb-80">
  <div class="es-search-header xs-pt-40 xs-pb-40 sm-pt-80 sm-pb-80 sm-mb-60">
    <div class="es-grid">
            <div class="es-row">
              <h1 class="title-1 text-dark-10 xs-mb-20 es-col-xs-6 es-offset-sm-2 es-col-sm-3">Serenova Blog</h1>
            </div>
        </div>
    </div>

    <div class="es-grid fill-white">
        <div class="es-row">
            {% for post in posts %}
            <div class="es-search-item es-col-xs-6 es-col-sm-2 xs-mb-40">
                {% if post.thumbnail %}
                <a href="{{ post.link }}">
                <img src="{{ post.thumbnail.src|resize(600, 400) }}" class="xs-mb-0" />
                </a>
                {% endif %}
                <h3 class="xs-mb-5"><a href="{{post.link}}" class="text-20-bold text-dark-10 decoration-none">{{post.title}}</a></h3>
                <p class="text-16 text-dark-70 xs-mb-10">{{ post.date }}</p>
                <p class="text-16 text-dark-30 xs-mb-20">{{post.post_content|excerpt(20)}}</p>
                <a href="{{ post.link }}" class="text-15-medium link-blue link-arrow-blue text-blue decoration-none caps medium">Read More</a>
            </div>
            {% endfor %}
        </div>
        {% include 'partials/listing-pagination.twig' %}
    </div>
</section>

<a href="https://www.customercontactcentral.com/&source=serenova" ><img src="//widget.aggregage.com/images/customercontactcentral/badge-clear.gif" alt="Customer Contact Central" title="Customer Contact Central" width="0px" height="0px" style="display: none;" border="0"/></a>

<script type='text/javascript'>
function loadScript(url){
  var e = document.createElement("script")
  e.src = url
  e.type="text/javascript"
  document.getElementsByTagName("head")[0].appendChild(e)
}
