{% for fp in options.resource_featured %}
<section class="es-image-cta-featured xs-pt-20 xs-pb-20 sm-pt-60 sm-pb-60 sm-nmt-60">
  <div class="fill-white">
    <div class="es-grid">
      <div class="es-row">
        <div class="es-col-xs-6 es-col-sm-4 es-col-md-4 es-col-lg-3 xs-pt-70 xs-pb-70">
          <div class="es-image-cta-featured-content -is-right">
            {% for term in post.terms('resource-category') %}
            <h5 class="title-cap xs-mb-20 text-15-medium text-dark-30">Featured - {{ term.name }}</h5>
            {% endfor %}
            <h2 class="title-1 text-dark-10 xs-mb-20">{{ fp.post_title }}</h2>
            <div class="flex flex-wrap align-center xs-flex-column sm-flex-row xs-mt-40">
              <a href="{{ fp.resources_link.link }}" class="text-15-medium caps link-blue link-arrow-blue decoration-none">{{ fp.resources_link.text }}</a>
            </div>
          </div>
        </div>
        <div class="es-image-cta-featured-image es-col-xs-6 es-col-sm-2 es-col-md-2 es-col-lg-3 relative  -is-right">
          <div class="es-image-cta-featured-image-img xs-pt-200"
              style="background-image:url({{ options.resource_featured_img }}">
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endfor %}
