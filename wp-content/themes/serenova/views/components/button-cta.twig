<section class="es-button-cta xs-pb-20 xs-pt-20 sm-pb-60 sm-pt-60 relative">
  <div class="es-grid">
    {# <div class="es-row"> #}
      <div class="es-button-cta-inner relative">
        <div class="fill-blue-dark">
          {# <div class="es-grid"> #}
            <div class="es-row">
              <div class="es-col-xs-6 es-col-lg-5 xs-pb-40 xs-pt-40 sm-pb-85 sm-pt-95 flex justify-space-between align-center flex-wrap relative">
                <img src="{{ theme.link }}/assets/images/button-cta@2x.png" alt="Icon with messaging icon inside text bubble" class="es-button-cta-icon">
                {% if item.bc_title is not empty or item.bc_text is not empty %}
                  <div class="es-button-cta-content">
                  {% if item.bc_title is not empty %}
                      <h2 class="title-1 text-white">{{ item.bc_title }}</h2>
                  {% endif %}
                  {% if item.bc_text %}
                      <p class="text-20 text-white xs-mt-15 sm-mt-0">{{ item.bc_text }}</p>
                  {% endif %}
                  </div>
                {% endif %}
                {% if item.bc_button is not empty %}
                  <div class="xs-mt-40 md-mt-0 sm-pr-20 lg-pr-0 es-button-cta-button">
                    <a href="{{ item.bc_button.url }}" class="button button-light button-xlarge text-15-bold text-blue-dark {{ item.bc_button.target}}">{{ item.bc_button.text }}</a>
                  </div>
                {% endif %}
              </div>
            {# </div> #}
          </div>
        </div>
      {# </div> #}
    </div>
  </div>
</section>
