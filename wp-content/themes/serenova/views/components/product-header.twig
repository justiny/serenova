<section class="es-product-header fill-white xs-pt-40 xs-pb-40 xs-pl-15 xs-pr-15 sm-pl-0 sm-pr-0 sm-pt-65 sm-pb-65 md-pt-135 md-pb-135 xs-mb-20 sm-mb-60">
  <div class="es-grid">
    <div class="es-row">
      <div class="es-col-xs-6 es-col-sm-3">
        {% if item.product_header_aria_title is not empty %}
        <h1 class="es-product-header-hidden">{{item.product_header_aria_title }}</h1>
        {% endif %}
        {% if item.product_header_image is not empty %}
        <img src="{{ TimberImage(item.product_header_image).src }}" class="xs-mb-10" alt="{ TimberImage(item.product_header_image).alt }}">
        {% endif %}
        {% if item.product_header_text %}
        <div class="text-20 text-dark-30">{{ item.product_header_text }}</div>
        {% endif %}
        {% if item.product_header_link.text is not empty %}
        <div class="flex flex-wrap align-center xs-flex-column sm-flex-row xs-mt-30">
          {% if item.product_header_link_choice == 'Link' %}
          <a href="{{ item.product_header_link.url }}" class="text-15-medium caps link-blue link-arrow-blue decoration-none" {{ item.product_header_link.target }}>{{ item.product_header_link.text }}</a>
          {% elseif item.product_header_link_choice == 'PDF' %}
          <a href="{{ item.product_header_pdf }}" class="text-15-medium caps link-blue link-arrow-blue decoration-none">Download PDF</a>
          {% endif %}
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>
