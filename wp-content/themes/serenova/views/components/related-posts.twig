{# this is a nice example how to use the relational field in acf with timber within flexible content #}
<section class="featured-cards xs-pt-20 sm-pt-60 sm-pb-20">
  <div class="es-grid">
    <div class="es-row">
      {% if item.rp_title is not empty or item.rp_text is not empty %}
      <div class="es-col-xs-6 xs-mb-40">
        {% if item.rp_title is not empty %}
        <h2 class="title-1 text-center-left text-dark-10">{{ item.rp_title }}</h2>
        {% endif %}
        {% if item.rp_text is not empty %}
        <div class="text-16 text-center-left text-dark-30 xs-mt-40">{{ item.rp_text}}</div>
        {% endif %}
      </div>
      {% endif %}
        {% for rp in item.es_related_posts %}
        {% set person_image = TimberImage(rp.thumbnail) %}
        <div class="es-col-xs-6 es-col-sm-2 xs-mb-20 sm-mb-40">
          <a class="featured-cards-item decoration-none" href="{{ rp.link }}">
            <div class="featured-cards-item-inner fill-white">
              {% if TimberImage(rp.thumbnail).src %}
              <div class="featured-cards-item-inner-image" style="background-image: url({{ TimberImage(rp.thumbnail).src }})"></div>
              {% else %}
              <div class="featured-cards-item-inner-image" style="background-image: url({{theme.link}}/assets/images/related-placeholder.jpg)"></div>
              {% endif %}
              <div class="xs-pt-25 xs-pb-25 xs-pr-15 sm-pr-30 xs-pl-15 sm-pl-30">
                <h3 class="text-20-bold text-blue-dark text-dark-10 decoration-none xs-mb-20">{{ rp.title }}</h3>
                <span class="link-blue link-arrow-blue link-arrow-blue-no-animate text-blue decoration-none caps text-15-medium">Read More</span>
              </div>
            </div>
          </a>
        </div>
        {% endfor %}
    </div>
  </div>
</section>
