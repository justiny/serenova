 <section class="es-simple-header xs-pt-40 xs-pb-40 sm-pt-75 sm-pb-80 sm-pr-0 sm-pl-0 md-pb-100 md-pt-100 fill-white xs-mb-20 sm-mb-60">
  <div class="es-grid">
    <div class="es-row">
      <h1 class="title-1 title-cap text-dark-10 xs-mb-20 es-col-xs-6 es-offset-sm-2 es-col-sm-3">{{ item.simple_title }}</h1>
      {% if item.simple_text is not empty %}
      <div class="text-20 text-dark-30 xs-mb-30 es-col-xs-6 es-offset-sm-2 es-col-sm-4 xs-pr-0 sm-pr-80 md-pr-120">{{ item.simple_text }}</div>
      {% endif %}

      {% if item.simple_button.text is not empty or item.simple_link.text is not empty %}
        <div class="flex flex-wrap align-center xs-flex-column sm-flex-row es-image-header-card-actions es-offset-sm-2 es-col-sm-4">
          {% if item.simple_button.text is not empty %}
            <a href="{{ item.simple_button.url }}" class="button button-blue button-medium xs-mb-25 md-mb-0 md-mr-40" {{ item.simple_button.target }}>{{ item.simple_button.text }}</a>
          {% endif %}
          {% if item.simple_link.text is not empty %}
            <a href="{{ item.simple_link.url }}" class="text-15-medium caps link-blue link-arrow-blue decoration-none" {{ item.simple_link.target }}>{{ item.simple_link.text }}</a>
          {% endif %}
        </div>
      {% endif %}

    </div>
  </div>
</section>
