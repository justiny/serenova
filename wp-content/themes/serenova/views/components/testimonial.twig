<section class="xs-pt-20 xs-pb-20 sm-pt-60 sm-pb-60 fill-white">
  <div class="es-grid">
    <div class="es-row">
      <div class="es-col-xs-6 es-col-sm-1 es-testimonial-avatar xs-mb-15 sm-mb-0">
        {% if TimberImage(item.avatar).src is not empty %}
        <img src="{{ TimberImage(item.avatar).src|resize(100, 100) }}" alt="{{ TimberImage(item.avatar).alt }}">
        {% endif %}
      </div>
      <div class="es-col-xs-6 es-col-sm-4">
        <h2 class="es-testimonial-quote text-38-italic text-blue-dark xs-mb-25 sm-mb-30"><span class="open-quote">&ldquo;</span>{{ item.quote_text }}<span class="close-quote">&rdquo;</span></h2>
        <p class="text-20-bold text-dark-10">{{ item.author_name }}</p>
        <p class="text-20 text-dark-30 xs-mt-0">{{ item.author_title }}</p>
      </div>
    </div>
  </div>
</section>
